<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200px"
        android:fontFamily="sans-serif-condensed"
        android:text="MIYAMAM"
        android:textAlignment="center"
        android:textSize="35sp"
        />


    <EditText
        android:id="@+id/editTextLogIn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200px"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:drawableEnd="@android:drawable/ic_dialog_email"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:selectAllOnFocus="true"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:hint="contraseÃ±a"
        android:inputType="textPassword"
        android:drawableEnd="@android:drawable/ic_dialog_alert"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:selectAllOnFocus="true"
        android:textSize="16dp"
        />


    <Switch
        android:id="@+id/switchRemember"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="Recordarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_acceder"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/white"
        android:text="Acceder"
        android:textColor="@color/teal_700"
        android:textSize="19dp"
        />

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/white"
        android:text="Registrarse"
        android:textColor="@color/teal_700"
        android:textSize="19dp"
        />


</LinearLayout>